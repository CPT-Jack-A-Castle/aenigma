		done

echo "Finished checking hostname IPv4 DNS settings."
echo
sleep 1

if [ $ipv6avail = "y" ]
then

	echo "Now let's make sure your hostname IPv6 DNS settings are correct."
	echo

			declare -A digarray=(
				[HN]=""
				[www]="www."
			)

			digarrayiter=0

			for i in "${!digarray[@]}"
			do

				digarrayiter=$(($digarrayiter + 1))
				echo "$digarrayiter] Now checking the ${digarray[$i]}$hostname DNS record in IPv6..."
				echo
				sleep 1

				dignxcheck="$(getent ahostsv6 ${digarray[$i]}$hostname. | grep -v $thisipv4 | head -1 | sed 's/ .*//' | wc -l)"
				digresult="$(getent ahostsv6 ${digarray[$i]}$hostname. | grep -v $thisipv4 | head -1 | sed 's/ .*//')"

				if [ $dignxcheck = "0" ]
				then
					echo "${r}The ${digarray[$i]}$hostname record does NOT appear to be at all set.${x}"
					echo
					echo "Please ensure you set your DNS record as follows:"
					echo
					echo -e "| ${digarray[$i]}$hostname\t\tAAAA\t$thisipv6 |"
					echo
					read -p "[press enter to continue...]"
				else
					if [ "$digresult" = "$thisipv6" ]
					then
						echo "${g}The ${digarray[$i]}$hostname record appears to resolve correctly to this server.${x}"
						echo
						echo -e "| ${digarray[$i]}$hostname\t\tAAAA\t$thisipv6 |"
						echo
						sleep 1
					else
						echo "${r}The ${digarray[$i]}$hostname record does NOT appear to correctly resolve to this server.${x}"
						echo
						echo "This is the result of a DNS query for ${digarray[$i]}$hostname:"
						echo
						getent ahostsv6 ${digarray[$i]}$hostname | head -1
						echo
            echo "Please set it instead to:"
            echo
            echo -e "| ${digarray[$i]}$hostname\t\tAAAA\t$thisipv6 |"
