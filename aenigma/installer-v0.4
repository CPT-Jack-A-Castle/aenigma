# \\\

fi

if [ -f $installdir/configoption ]
then
	prevconfigoption="$(cat $installdir/configoption)"
	case "$prevconfigoption" in
	    1|2|3)
		validprevconfigoption=y
		;;
	    *)
		validprevconfigoption=n
		;;
	esac
